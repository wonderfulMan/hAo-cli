{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "@types",
    "typings",
    "./typings",
    "./src"
  ]
}