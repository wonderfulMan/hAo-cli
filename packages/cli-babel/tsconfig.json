{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots":[
      "node_modules/@types",
      "src/typings"
    ]
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "include": [
    "./src", "src/typings"
  ]
}