{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./typings",
    "./src"
  ]
}